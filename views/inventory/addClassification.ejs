<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="newClassificationForm" action="/inv/add-classification" method="post">
  <fieldset>
    <legend>Field is required.</legend>
    <label for="classificationName">Classification Name:</label>
    <input type="text" id="classificationName" name="classification_name" required pattern="^[a-zA-Z]+$" value="<%= locals.classification_name %>">
    <span class="classification-help">Name must be alphabetic characters only.</span>
  </fieldset>
  <button type="submit">Add Classification</button>
</form>